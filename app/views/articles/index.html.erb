<h1>Articles</h1>

<%= link_to("Create a new article", new_article_path(@article)) %>

<% @articles.each do |article| %>
  <ul>
    <li><b><%= link_to(article.title, article_path(article)) %></b><br/>
    <%= article.content %><br/>
    <%= link_to('Delete',
                article_path(article) ,
                method: :delete,
                data: { confirm: "Are you sure?" } ) %></li>
  </ul>
<% end %>
