<h1>Articles</h1>

<%= link_to("Create a new article", new_article_path(@article)) %>

<% @articles.each do |article| %>
  <ul>
    <li><h3><%= link_to(article.title, article_path(article)) %></h3>
    <%= article.content %></li><br/>
    <%= link_to('Delete',
                article_path(article) ,
                method: :delete,
                data: { confirm: "Are you sure?" } ) %>
  </ul>
<% end %>
